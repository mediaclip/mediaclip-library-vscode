{
  "name": "mediaclip-library-vscode",
  "publisher": "mediaclip",
  "displayName": "Mediaclip Library",
  "description": "",
  "version": "1.3.4",
  "icon": "images/logo.png",
  "preview": true,
  "engines": {
    "vscode": "^1.105.0"
  },
  "repository": "https://github.com/mediaclip/mediaclip-library-vscode",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "XML",
      "properties": {
        "xml.catalogs": {
          "type": "array",
          "default": [],
          "description": "Array of XML catalog files to use",
          "items": {
            "type": "string"
          },
          "scope": "window"
        }
      }
    }
  },
  "extensionDependencies": [
    "redhat.vscode-xml"
  ],
  "scripts": {
    "compile": "npm run check-types && node esbuild.cjs",
    "check-types": "tsc --noEmit",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.cjs --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "vscode:prepublish": "npm run package",
    "package": "npm run check-types && node esbuild.cjs --production",
    "vsix": "vsce package",
    "publish": "vsce package"
  },
  "dependencies": {
    "@mediaclip/dependency-injection": "^1.0.6",
    "fast-xml-parser": "^5.3.0"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "24.x",
    "@types/vscode": "1.105.0",
    "@typescript-eslint/eslint-plugin": "8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.11",
    "eslint": "^9.38.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/vsce": "^3.6.2"
  }
}
